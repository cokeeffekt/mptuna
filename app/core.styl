@import 'nib'
@import 'rupture'
@import './app/settings'

global-reset()

*
  box-sizing border-box
  -webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

html
body
  font-family 'Raleway', Arial, sans-serif
  margin 0
  padding 0
  font-size 14px
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color black


#mpTuna-server
  h2
    color white

svg.icon
  display inline-block
  width 1em
  height 1em
  stroke-width 0
  stroke currentColor
  fill currentColor
a
  transition 200ms
  cursor pointer