@import 'nib'
@import 'rupture'
@import './app/settings'

global-reset()

*
  box-sizing border-box
  -webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

html
body
  font-family 'Raleway', Arial, sans-serif
  margin 0
  padding 0
  font-size 14px
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color black


canvas
  width 100%
  height 50%
  opacity 0.2
  position absolute
  bottom 0
  left 0
